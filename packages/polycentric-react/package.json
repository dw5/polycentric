    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-storybook": "0.6.12",
    "jsdom": "22.1.0",
    "json": "11.0.0",
    "lint-staged": "13.2.2",
    "nightwind": "^1.1.13",
    "postcss": "8.4.24",
    "prettier": "2.8.8",
    "prop-types": "15.8.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "storybook": "7.0.23",
    "tailwindcss": "3.3.2",
    "typescript": "5.1.3",
    "vite": "4.3.9",
